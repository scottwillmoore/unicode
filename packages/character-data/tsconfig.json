{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../typescript.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"preserveWatchOutput": true,
		"sourceMap": true,
		"target": "ESNext"
	}
}
